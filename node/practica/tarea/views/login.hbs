<div class="container-fluid bg-dark" style="height: 100vh">
    <div class="row justify-content-center aling-item-center">
        <div class="col-4 bg-dark mt-4">
            <form method="POST" action="/users/login">
                <div class="mb-3">
                    <label for="username" class="form-label">Usuario</label>
                    <input type="text" placeholder="Ingrese Nombre" class="form-control" id="user" name="username">
                </div>
                <div class="mb-3">
                    <label for="pass" class="form-label">Password</label>
                    <input type="password" placeholder="Ingrese password" class="form-control" id="pass" name="pass">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>